{
  "name": "main-host",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "nx-mf-df",
  "sourceRoot": "apps/main-host/src",
  "tags": ["type:app"],
  "targets": {
    "build": {
      "executor": "@nx/angular:webpack-browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/main-host",
        "index": "apps/main-host/src/index.html",
        "main": "apps/main-host/src/main.ts",
        "tsConfig": "apps/main-host/tsconfig.app.json",
        "inlineStyleLanguage": "css",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/main-host/public"
          }
        ],
        "styles": ["apps/main-host/src/styles.css"],
        "customWebpackConfig": {
          "path": "apps/main-host/webpack.config.ts"
        }
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all",
          "customWebpackConfig": {
            "path": "apps/main-host/webpack.prod.config.ts"
          }
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/angular:module-federation-dev-server",
      "options": {
        "port": 4200,
        "host": "0.0.0.0",
        "publicHost": "http://localhost:4200",
        "allowedHosts": ["localhost"],
        "devRemotes": ["mf_remote_a", "mf_remote_b", "mf_remote_home"],
        "pathToManifestFile": "apps/main-host/public/module-federation.manifest.json"
      },
      "configurations": {
        "production": {
          "buildTarget": "main-host:build:production"
        },
        "development": {
          "buildTarget": "main-host:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "main-host:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/apps/main-host"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "main-host:build",
        "port": 4200,
        "spa": true
      }
    }
  }
}
